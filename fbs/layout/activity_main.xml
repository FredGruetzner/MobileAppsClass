<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ToggleButton
            android:text="@string/flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flash"
            android:background="@color/colorGreen"
            android:textOff="@string/flash"
            android:textOn="@string/stopflash"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <ToggleButton
            android:text="@string/bleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bleep"
            android:background="@color/colorGreen"
            android:textOff="@string/bleep"
            android:textOn="@string/stopbleep"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/flash" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <ToggleButton
            android:text="@string/shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:textOff="@string/shake"
            android:textOn="@string/stopshake"
            android:id="@+id/shake" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/bleep"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.093"/>
</android.support.constraint.ConstraintLayout>