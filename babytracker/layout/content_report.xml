<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".Report">

    <Button
            android:text="@string/diaperReport"
            android:textColor="@color/font"
            android:textSize="12sp"
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dReport" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/fReport"
            app:layout_constraintHorizontal_bias="0.336"/>
    <Button
            android:text="@string/feedReport"
            android:textSize="12sp"
            android:textColor="@color/font"
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fReport" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/tReport"/>
    <Button
            android:text="@string/tumReport"
            android:textSize="12sp"
            android:textColor="@color/font"
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tReport"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:text="@string/report"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/report" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>

